<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F4F7">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAbout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1A237E"
        app:titleTextColor="#FFFFFF"
        app:title="About Us" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/indahsayang"
                android:contentDescription="Logo"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V-PASS"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visitor Management System\nIndah Sayang Residential"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:textColor="#757575"
                android:lineSpacingExtra="4dp"/>

            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="#1A237E"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Mission"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="V-PASS is designed to enhance the security and efficiency of Indah Sayang Residential by digitizing visitor registration through QR code technology."
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="3dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Key Features"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Instant QR Code Generation\n• Real-time Guard Verification\n• Secure Cloud Entry Logs\n• Seamless Resident Experience"
                android:textColor="#555555"
                android:textSize="14sp"
                android:lineSpacingExtra="6dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed by: V-PASS Tech Team"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:layout_marginTop="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>