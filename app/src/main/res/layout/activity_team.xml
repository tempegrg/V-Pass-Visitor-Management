<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_team"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F7F9">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarTeam"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#1A237E"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Meet Our Team"
            app:titleTextColor="#FFFFFF"
            app:navigationIcon="@android:drawable/ic_menu_sort_by_size" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbarTeam">

            <LinearLayout
                android:id="@+id/teamContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V-PASS Developers"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:layout_marginBottom="4dp"/>

                <View
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:background="#1A237E"
                    android:layout_marginBottom="20dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="6dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="4dp"
                            android:src="@drawable/aina"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/CircleImage"
                            app:strokeColor="#1A237E"
                            app:strokeWidth="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NUR AINA ZULAIKHA"
                            android:layout_marginTop="12dp"
                            android:textStyle="bold"
                            android:textColor="#1A237E"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2023644268"
                            android:textColor="#757575"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Responsible for developing the user registration, login, and notification system."
                            android:textAlignment="center"
                            android:layout_marginTop="8dp"
                            android:textColor="#424242"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="4dp"
                            android:src="@drawable/nayli"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/CircleImage"
                            app:strokeColor="#1A237E"
                            app:strokeWidth="2dp"/>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NUR NAYLI KARMILA" android:layout_marginTop="12dp" android:textStyle="bold" android:textColor="#1A237E" android:textSize="18sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2023415328" android:textColor="#757575" android:textSize="14sp"/>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Responsible for developing the QR code generation and guard system." android:textAlignment="center" android:layout_marginTop="8dp" android:textColor="#424242" android:textSize="13sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="4dp"
                            android:src="@drawable/auni"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/CircleImage"
                            app:strokeColor="#1A237E"
                            app:strokeWidth="2dp"/>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PUTRI AUNI NURIZZATY" android:layout_marginTop="12dp" android:textStyle="bold" android:textColor="#1A237E" android:textSize="18sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2023680784" android:textColor="#757575" android:textSize="14sp"/>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Responsible for developing the user interface (UI) and integrating all system codes." android:textAlignment="center" android:layout_marginTop="8dp" android:textColor="#424242" android:textSize="13sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="4dp"
                            android:src="@drawable/zulaika"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/CircleImage"
                            app:strokeColor="#1A237E"
                            app:strokeWidth="2dp"/>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SHARIFAH ZULAIKA" android:layout_marginTop="12dp" android:textStyle="bold" android:textColor="#1A237E" android:textSize="18sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2023239388" android:textColor="#757575" android:textSize="14sp"/>
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Responsible for report writing and project documentation." android:textAlignment="center" android:layout_marginTop="8dp" android:textColor="#424242" android:textSize="13sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_team"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="#1A237E"
        app:itemTextColor="#212121" />

</androidx.drawerlayout.widget.DrawerLayout>